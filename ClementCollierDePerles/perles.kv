# -*-coding: utf-8 -*-
#:kivy 1.7.2

<Perle>:
    size_hint: 0.05, 0.05
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<JeuPerles>:

	perleVoyO: perleO
	perleVoyU: perleU

	canvas:
		Rectangle:
			pos: self.width/2+self.center_x/2 , self.center_y-8
			size: 20,20
			
		Rectangle:
			pos: self.center_x/2, self.center_y
			size: self.width/2, 4 
		
			
	Label:
		font_size: 40  
		center_x: root.width / 2
		top: root.top - 30
		text: "voyelle"
		
	Perle:
		id: perleO
		center: 50, self.parent.center_y
	
	Perle:
		id: perleU 
        center: 50, self.parent.center_y-60
	

   
